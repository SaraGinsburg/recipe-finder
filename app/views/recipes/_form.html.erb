<%= form_for @recipe do |f|  %>
  <% if @recipe.errors.any? %>
    <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.label :name %>:
  <%= f.text_field :name %>
  <br>
  <%= f.label :ingredients %>:
  <br>
  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :name %>:
    <%= i.text_field :name %>
    <%= i.fields_for :recipe_ingredients do |ri| %>
      <%= ri.label :quantity %>:
      <%= ri.text_field :quantity %>
    <% end %>
    <br>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
